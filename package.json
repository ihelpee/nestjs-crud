{
  "name": "@ihelpee/nestjs-crud",
  "version": "1.0.0",
  "description": "Nest CRUD for RESTful APIs",
  "license": "GPL-3.0",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "s": "npx nps",
    "s:list": "yarn s --scripts",
    "rebuild": "yarn clean && yarn build",
    "build": "yarn s build",
    "clean": "yarn s clean",
    "test": "npx jest --runInBand -c=jest.config.js packages/ --verbose",
    "lint": "eslint \"packages/**/*.ts\" --fix",
    "pub": "npx lerna publish --force-publish",
    "db:cli:typeorm": "ts-node -r tsconfig-paths/register node_modules/typeorm/cli.js",
    "db:sync:typeorm": "npx ts-node -r tsconfig-paths/register -P tsconfig.json ./node_modules/typeorm/cli.js schema:sync",
    "db:drop:typeorm": "yarn db:cli:typeorm schema:drop",
    "db:seeds:typeorm": "yarn db:cli:typeorm migration:run",
    "db:prepare:typeorm": "yarn db:drop:typeorm -d ./database/postgres.datasource && yarn db:sync:typeorm -d ./database/postgres.datasource && yarn db:seeds:typeorm -d ./database/postgres.datasource",
    "db:prepare:typeorm:mysql": "yarn db:drop:typeorm -d ./database/mysql.datasource && yarn db:sync:typeorm -d ./database/mysql.datasource && yarn db:seeds:typeorm -d ./database/mysql.datasource",
    "test:all": "yarn test:mysql && yarn test:postgres",
    "test:coverage": "yarn test:all --coverage",
    "test:postgres": "yarn db:prepare:typeorm && yarn test",
    "test:mysql": "yarn db:prepare:typeorm:mysql && TYPEORM_CONNECTION=mysql yarn test",
    "test:mikro": "npx jest --runInBand -c=jest.config.js packages/crud-mikroorm --verbose"
  },
  "keywords": [
    "nestjs",
    "nest",
    "crud",
    "ihelpee"
  ],
  "devDependencies": {
    "@faker-js/faker": "9.9.0",
    "@mikro-orm/cli": "6.4.3",
    "@mikro-orm/postgresql": "6.4.3",
    "@nestjs/common": "11.1.6",
    "@nestjs/core": "11.1.6",
    "@nestjs/platform-express": "11.1.6",
    "@nestjs/swagger": "11.2.0",
    "@nestjs/testing": "11.1.6",
    "@nestjs/typeorm": "11.0.0",
    "@types/jest": "29.5.14",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "6.0.0",
    "@typescript-eslint/parser": "6.0.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "eslint": "8.42.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "jest": "29.7.0",
    "lerna": "^8.2.3",
    "mysql2": "3.11.5",
    "nps": "5.10.0",
    "nps-utils": "1.7.0",
    "pg": "8.16.3",
    "prettier": "3.0.0",
    "reflect-metadata": "0.2.2",
    "rimraf": "6.0.1",
    "supertest": "7.0.0",
    "ts-jest": "29.4.1",
    "ts-node": "10.9.2",
    "typeorm": "0.3.25",
    "typeorm-extension": "3.6.3",
    "typescript": "5.7.2"
  },
  "author": {
    "name": "ihelpee",
    "email": "alex.gotardi@ihelpee.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ihelpee/nestjs-crud"
  },
  "packageManager": "yarn@1.22.22+sha1.ac34549e6aa8e7ead463a7407e1c7390f61a6610"
}
